  <title>Modifica Articolo</title>
  
</head>
<body>
  <div class="container-edit">
  <form action="/edit/<%= item.id %>" method="POST">
    <label for="autor">Titolo:</label>
    <input type="text" id="title" name="title" value="<%= item.title %>" ><br>
    <label for="title">Descrizione:</label>
    <input type="text" id="descr" name="descr" value="<%= item.descr %>" ><br>
    <label for="message">Recesione:</label>
    <input type="text" id="rating" name="rating" value="<%= item.rating %>" ><br>

    <input type="submit" value="Salva" class="btn btn-default btn-warning" />
    <a class="btn btn-outline-dark cancel" href="/">Annulla</a>
  </form>
</div>
</div>
</body>

</html>
